<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.BrandMapper">

    <resultMap id="brandMapper" type="com.tencent.wxcloudrun.model.Brand">
        <id property="id" column="id"/>
        <id property="name" column="brand_name"/>
        <id property="url" column="brand_url"/>
        <id property="info" column="brand_info"/>
        <result property="createdAt" column="created_time" javaType="java.time.LocalDateTime" />
        <result property="updatedAt" column="updated_time" javaType="java.time.LocalDateTime"  />
    </resultMap>

    <sql id="baseColumn" >
    <![CDATA[
        `id`, `brand_name`,`brand_url`,`brand_info`,`created_time`, `updated_time`
        ]]>
  </sql>
    <select id="getBrandById" resultMap="brandMapper" parameterType="java.lang.Integer">
        SELECT
        <include refid="baseColumn"></include>
        FROM smart_brand
        WHERE id = #{id}
    </select>

    <select id="getBrands" resultMap="brandMapper">
        SELECT
        <include refid="baseColumn"></include>
        FROM smart_brand
    </select>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE
        FROM smart_brand
        where id = #{id}
        limit 1
    </delete>

    <update id="upsertCount" parameterType="com.tencent.wxcloudrun.model.Brand">
        INSERT INTO `smart_brand`(`id`, `count`)
        VALUE(#{id}, #{count}) 
        ON DUPLICATE KEY UPDATE count=#{count}
    </update>

</mapper>
